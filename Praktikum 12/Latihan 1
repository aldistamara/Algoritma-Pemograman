class Mahasiswa:
    def __init__(self, nama, nim, akt):
        self.nama = nama
        self.nim = nim
        self.akt = akt
        
    def printMahasiswa(self):
        print('\nNama: ' + self.nama + '\nNIM: ' + str(self.nim) + '\nTahun Angkatan: ' + str(self.akt))
                
nama = input('Masukkan Nama: ')
nim = input('Masukkan NIM: ')
akt = input('Masukkan Tahun Angkatan: ')
mhs = Mahasiswa(nama, nim, akt)
mhs.printMahasiswa()
